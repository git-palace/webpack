{
  "name": "webpack-defaults",
  "version": "0.1.0",
  "description": "Defaults to be shared across webpack projects",
  "author": {
    "name": "Artem Sapegin",
    "url": "http://sapegin.me"
  },
  "homepage": "https://github.com/webpack-contrib/webpack-defaults",
  "repository": "webpack-contrib/webpack-defaults",
  "license": "MIT",
  "engines": {
    "node": ">=4"
  },
  "bin": "dist/index.js",
  "files": [
    "dist",
    "lib",
    "templates",
    "config.json"
  ],
  "scripts": {
    "sync": "./dist/index.js",
    "lint": "eslint --cache src test",
    "test": "jest",
    "prebuild": "yarn run clean:dist",
    "postinstall": "node lib/post_install.js",
    "build": "cross-env NODE_ENV=production babel -s true src -d dist --ignore 'src/**/*.test.js'",
    "clean:dist": "del-cli dist",
    "start": "yarn run serve:dev src",
    "serve:dev": "nodemon $2 --exec babel-node",
    "security": "nsp check",
    "test:coverage": "jest --collectCoverageFrom='src/**/*.js' --coverage",
    "travis:test": "yarn run test",
    "travis:coverage": "yarn run test:coverage",
    "travis:lint": "yarn run lint && yarn run nsp",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "mrm-core": "^1.0.0"
  },
  "keywords": [
    "webpack"
  ],
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-jest": "^19.0.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-webpack": "^1.0.0",
    "cross-env": "^3.1.4",
    "del-cli": "^0.2.1",
    "eslint": "^3.16.0",
    "eslint-config-webpack": "^1.0.0",
    "eslint-plugin-import": "^2.2.0",
    "jest": "^19.0.1",
    "lint-staged": "^3.3.1",
    "nodemon": "^1.11.0",
    "nsp": "^2.6.2",
    "pre-commit": "^1.2.2"
  },
  "pre-commit": "lint-staged",
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
